<% layout("layouts/boilerplate.ejs") -%>

<div class="row mt-3">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title fs-3 text-center">Activity day <%= userActivities.dayNumber %></h1>
                
                <div class="mb-3">
                    <p class="text-muted">Total: <%= userActivities.total %></p>
                    <p class="text-muted">Unique user: <%= uniqueUser %></p>
                </div>

                <a hx-boost="true" class="btn btn-outline-secondary" href="/admin/activities">Activities</a>
            </div>
        </div>
    </div>
</div>

