<% layout("layouts/boilerplate.ejs") -%> 

<link rel="stylesheet" href="/styles/interactionButtons/interactionButtons.1.0.0.css">

<h1 class="display-4">Collections</h1>

<div class="mb-4">
    <a class="iconLinkButton" href="/collections/new" data-toggle="tooltip" title="Add a new collection"><img 
        src="/images/new.svg" alt="Add a new collection icon"></a>
</div>

<% for(let collection of collections) { %>
    <%- include("../partials/itemWidget.ejs", { 
         url: `/collections/${collection.id}`,
         title: collection.name
     }) %>
<% } %>

<%- include("../partials/pagination.ejs") %>
