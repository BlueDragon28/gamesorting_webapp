<% layout("layouts/boilerplate.ejs") -%> 

<h1 class="display-4">Collections</h1>

<div class="mb-4">
    <a class="btn btn-primary" href="/collections/new">New Collection</a>
</div>

<% for(let collection of collections) { %>
    <div class="row pb-3">
        <div class="col-16">
            <div class="card">
                <div class="card-body">
                    <h2 class="fs-4 fw-normal mb-4"><%= collection.name %></h2>

                    <a class="btn btn-info" href="/collections/<%= collection.id %>">View Collection</a>
                </div>
            </div>
        </div>
    </div>
<% } %>
