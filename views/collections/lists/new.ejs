<% layout("layouts/boilerplate.ejs") -%> 

<h1>New List In <%= collection.data.Name %> Collection: </h1>

<form action="/collections/<%= collection.data.CollectionID %>" method="post">
    <section>
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
    </section>

    <button style="margin-top: 1rem; margin-bottom: 1rem;">Create</button>
</form>

<a href="/collections/<%= collection.data.CollectionID %>">Cancel!</a>