<% layout("layouts/boilerplate.ejs") -%> 

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title fs-4">Download <%= list.name %></h1>

                <form id="download-list-form-element" action="#">
                    <div class="mb-3">
                        <label class="form-label" for="download-list-download-type-select">Type</label>
                        <select class="form-select" name="type" id="download-list-download-type-select" aria-label="Select how to download list">
                            <option value="JSON">JSON</option>
                        </select>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" name="minimized" id="download-list-minimized-json">
                        <label class="form-check-label" for="download-list-minimized-json">Minified</label>
                    </div>

                    <div>
                        <a class="btn btn-secondary" href="/collections/<%= list.parentCollection.id %>/lists/<%= list.id %>">Cancel</a>
                        <button class="btn btn-success" type="submit">Download</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const list = <%- JSON.stringify(list, (key, value) => typeof value === "bigint" ? value.toString() : value) %>
</script>
