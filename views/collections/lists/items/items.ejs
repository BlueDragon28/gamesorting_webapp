<% layout("layouts/boilerplate.ejs") -%> 

<h1><%= lists.parent.list.Name %>:</h1>

<ul>
    <% for (let list of lists.data) { %> 
        <li>
            <a href="/collections/<%= lists.parent.collection.CollectionID %>/<%= lists.parent.list.ListID %>/<%= list.ItemID %>"><%= list.Name %></a>
        </li>
    <% } %> 
</ul>

<form action="/collections/<%= lists.parent.collection.CollectionID %>/<%= lists.parent.list.ListID %>?_method=DELETE" method="post">
    <button>Delete</button>
</form>

<a href="/collections/<%= lists.parent.collection.CollectionID %>/<%= lists.parent.list.ListID %>/new">New Item</a>
<a href="/collections/<%= lists.parent.collection.CollectionID %>">Go Back!</a>