<% layout("layouts/boilerplate.ejs") -%> 

<!-- A simple form to edit a list -->
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title fs-4">Edit <%= list.data.Name %> List</h1>

                <!-- The only information we need for the form is the name of the list -->
                <form action="/collections/<%= list.parent.collection.CollectionID %>/lists/<%= list.data.ListID %>?_method=PUT" method="post">
                    <section class="mb-3">
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" type="text" name="name" id="name" value="<%= list.data.Name %>">
                    </section>
                
                    <button class="btn btn-primary d-inline">Edit</button>

                    <!-- To allow the the button to appear next to the Create btn, the cancel link has been put there -->
                    <a class="btn btn-secondary" href="/collections/<%= list.parent.collection.CollectionID %>">Cancel</a>
                </form>
            </div>
        </div>
    </div>        
</div>