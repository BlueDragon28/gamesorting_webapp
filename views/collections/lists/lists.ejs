<% layout("layouts/boilerplate.ejs") -%> 

<h1 class="display-4"><%= collection.name//lists.parent.collection.Name %></h1>

<div class="mb-4">
    <a class="btn btn-primary" href="/collections/<%= collection.id %>/lists/new">New List</a>
    <a class="btn btn-success" href="/collections/<%= collection.id %>/edit">Edit Collection</a>
    <a class="btn btn-secondary" href="/collections">Go Back</a>

    <form class="d-inline" action="/collections/<%= collection.id %>?_method=DELETE" method="post">
        <button class="btn btn-danger">Delete Collection</button>
    </form>
</div>

<!-- Display the available lists in a list of cards -->
<% for(let list of lists) { %>
    <div class="row pb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="fs-4 fw-normal pb-3"><%= list.name %></h2>

                    <a class="btn btn-info" href="/collections/<%= collection.id %>/lists/<%= list.id %>">View List</a>
                </div>
            </div>
        </div>
    </div>
<% } %>
