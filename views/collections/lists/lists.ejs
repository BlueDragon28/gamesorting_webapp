<% layout("layouts/boilerplate.ejs") -%> 

<h1 class="display-4"><%= lists.name//lists.parent.collection.Name %></h1>

<div class="mb-4">
    <a class="btn btn-primary" href="/collections/<%=// lists.parent.collection.CollectionID %>/lists/new">New List</a>
    <a class="btn btn-success" href="/collections/<%=// lists.parent.collection.CollectionID %>/edit">Edit Collection</a>
    <a class="btn btn-secondary" href="/collections">Go Back</a>

    <form class="d-inline" action="/collections/<%= lists.id %>?_method=DELETE" method="post">
        <button class="btn btn-danger">Delete Collection</button>
    </form>
</div>

<!-- Display the available lists in a list of cards -->
<% if (false) {// for(let list of lists.data) { %>
    <div class="row pb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="fs-4 fw-normal pb-3"><%=// list.Name %></h2>

                    <a class="btn btn-info" href="/collections/<%=// lists.parent.collection.CollectionID %>/lists/<%= //list.ListID %>">View List</a>
                </div>
            </div>
        </div>
    </div>
<% } %>
