<% layout("layouts/boilerplate") -%> 

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title fs-4">Contact</h1>

                <form class="needs-validation" action="/contact" method="post" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="from">From</label>
                        <input class="form-control" type="email" name="from" id="from" placeholder="Enter your email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            You need to enter a valid email
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="object">Object</label>
                        <input class="form-control" type="text" name="object" id="object" placeholder="Object of your demand" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            You need to enter an object
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="message">Message</label>
                        <textarea class="form-control" name="message" id="message" cols="30" rows="10" maxlength="5000" placeholder="Your message" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            You need to enter a message.
                        </div>
                        <div class="text-muted"><span id="number-of-characters">0</span>/5000 characters</div>
                    </div>

                    <button class="btn btn-success" type="submit">Send</button>
                    <a class="btn btn-secondary" href="/">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/contact/maxCharacter.1.0.0.js"></script>