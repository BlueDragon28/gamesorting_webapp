<% if (!htmx.isHTMX || (htmx.isHTMX && htmx.isBoosted)) { %>
<% layout("layouts/boilerplate.ejs") -%>

<div class="row mt-3">
    <div class="col-12 col-md-6 offset-md-3">
        <div class="card">
            <form class="card-body"
                hx-post="/users/register"
                hx-swap="innerHTML"
                hx-push-url="false"
            >
<% } %>

<%
const isValueAvailable = typeof registerValue === "object";
%>

                <h1 class="card-title fs-4">Register</h1>
                <input type="hidden" name="emptySet", value="<%= isValueAvailable ? registerValue.emptySet : '' %>">

                <div class="form-floating my-3">
                    <input class="form-control" type="text" id="username" name="username" placeholder="" value="<%= isValueAvailable ? registerValue.username : '' %>">
                    <label for="username">Username</label>
                </div>

                <div class="form-floating my-3">
                    <input class="form-control" type="email" id="email" name="email" placeholder="" value="<%= isValueAvailable ? registerValue.email : '' %>">
                    <label for="email">Email</label>
                </div>

                <div class="form-floating my-3">
                    <input class="form-control" type="password" id="password" name="password" placeholder="" value="<%= isValueAvailable ? registerValue.password : '' %>">
                    <label for="password">Password</label>
                </div>

                <div class="form-floating my-3">
                    <input class="form-control" type="password" id="retyped-password" name="retyped-password" placeholder="" value="<%= isValueAvailable ? registerValue.retypedPassword : '' %>">
                    <label for="retyped-password">Retyped Password</label>
                </div>

                <button type="submit" class="btn btn-outline-secondary">Submit</button>
                

<% if (!htmx.isHTMX || (htmx.isHTMX && htmx.isBoosted)) { %>
            </form>
        </div>
    </div>
</div>
<% } %>
