<form id="custom-columns-edit-form"
    class="p-3 border-end-0 rounded-0 flex-shrink border-top"
>
    <h3 class="display-7 my-2 text-center">Editing <%= listColumnType.name %></h3>

    <div class="form-floating w-100 my-2">
        <input class="form-control" type="text" name="name" placeholder="" value="">
        <label>Column Name</label>
    </div>

    <button type="submit" class="btn btn-outline-secondary w-100 my-2">Update</button>
    <button 
        type="button" 
        class="btn btn-outline-secondary w-100 my-2"
        hx-get="/collections/lists/<%= selectedID %>/custom-columns/new-form"
        hx-target="#custom-columns-edit-form"
        hx-swap="outerHTML"
        hx-push-url="false"
    >Cancel</button>
</form>
