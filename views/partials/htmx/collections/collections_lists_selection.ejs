<% if (!htmx.isHTMX || (htmx.isHTMX && htmx.isBoosted)) { %>
<% layout("layouts/boilerplate.ejs") -%>
<% } %>

<% if (!htmx.isHTMX || htmx.isBoosted) { %>
<div id="collections-lists-global-row" class="row h-100"
    hx-get="<%= originalUrl %>"
    hx-swap="outerHTML"
    hx-trigger="load">
    <div class="col-4 m-0 p-0">
        <div class="card h-100">
            <div class="card-header">
                Collections/Lists
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <div>No Collections</div>
            </div>
        </div>
    </div>
    <%- include("./items/unknown_item.ejs") %>
</div>
<% } else { %>

<div id="collections-lists-global-row" class="row h-100">
    <%- include("./collections_lists_list.ejs", { lists: lists, selectedID: listID }) %>
    <% if (!items.length) { %>
    <%- include("./items/unknown_item.ejs") %>
    <% } else { %>
    <%- include("./items/items.ejs", { items: items, baseUrl: originalUrl }) %>
    <% } %>
</div>

<% } %>
