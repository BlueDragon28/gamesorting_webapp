<div id="delete-item-modal-<%= item.id %>" class="modal fade" tabindex="-1" aria-labelledby="deleteItemModal" aria-hidden="true" gs-new-modal="true">
    <div class="modal-dialog">
        <div class="modal-content user-select-none">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Delete Item</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Do you really want to delete item <%= item.name %>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger"
                    hx-delete="/collections/lists/<%= item.parentList.id %>/item/<%= item.id %>"
                    hx-target="#<%= destinationId %>"
                    hx-swap="outerHTML"
                    data-bs-dismiss="modal"
                >Delete</button>
            </div>
        </div>
    </div>
</div>
