<div id="delete-list-column-type-modal-<%= listColumnType.id %>" class="modal fade" tabindex="-1" gs-new-modal="true">
    <div class="modal-dialog">
        <div class="modal-content user-select-none">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Delete Custom Column</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Do you really want to delete <%= listColumnType.name %></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger"
                    data-bs-dismiss="modal"
                    hx-delete="/collections/lists/<%= listColumnType.parentList.id %>/custom-columns?listColumnTypeID=<%= listColumnType.id %>"
                >Delete</button>
            </div>
        </div>
    </div>
</div>
