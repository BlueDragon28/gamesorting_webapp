<link rel="stylesheet" href="/styles/searchBox.css">

<div class="card mb-3 search-card-transition hide" id="search-items-block">
    <div class="card-body">
        <h2 class="fs-5">Search</h2>
        <div class="my-3">
            <span>
                <input class="form-check-input" type="checkbox" name="search-exact-match" id="search-exact-match" 
                    <%= searchData?.exactMatch ? "checked" : "" %> <%= searchData?.regex ? "disabled" : "" %>>
                <label class="form-check-label me-2" for="search-exact-match" data-toggle="tooltip" title="Searching the exact match">Exact match</label>
            </span>

            <span>
                <input class="form-check-input" type="checkbox" name="search-regex" id="search-regex"
                    <%= searchData?.regex ? "checked" : "" %>>
                <label class="form-check-label" for="search-regex" data-toggle="tooltip" title="Searching using regular expression">Regex</label>
            </span>
        </div>
        <div>
            <label for="search-text-input" class="form-label">Search</label>
            <input type="text" class="form-control" name="search-text" id="search-text-input" placeholder="Enter text to search"
                value="<%= searchData?.text %>">
        </div>
        <div class="mt-3">
            <button type="button" class="btn btn-secondary" id="cancel-search-button">Cancel</button>
            <button type="button" class="btn btn-success" id="submit-search-button">Search</button>
        </div>
    </div>
</div>

<script src="/javascript/collections/lists/items/searchBox.js"></script>
